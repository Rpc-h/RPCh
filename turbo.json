{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "rpch-exit-node#build": {
      "env": ["HOPRD_API_ENDPOINT", "HOPRD_API_TOKEN", "RESPONSE_TIMEOUT_STR"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "coverage": {
      "outputs": ["coverage/**", "report.json"]
    },
    "dev": {
      "cache": false
    }
  }
}
