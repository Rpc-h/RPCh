{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        ".next/**"
      ]
    },
    "@rpch/exit-node#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "RPCH_PRIVATE_KEY",
        "RPCH_PASSWORD",
        "RPCH_IDENTITY_FILE",
        "RPCH_DB_FILE",
        "HOPRD_API_TOKEN",
        "HOPRD_API_ENDPOINT",
        "DISCOVERY_PLATFORM_API_ENDPOINT",
        "DISCOVERY_PLATFORM_ACCESS_TOKEN"
      ]
    },
    "@rpch/e2e#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "ENTRY_NODE_API_ENDPOINT",
        "ENTRY_NODE_API_TOKEN",
        "ENTRY_NODE_PEER_ID",
        "EXIT_NODE_PEER_ID",
        "EXIT_NODE_PUB_KEY"
      ]
    },
    "@rpch/discovery-platform#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "ADMIN_SECRET",
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "PORT",
        "SESSION_SECRET",
        "URL"
      ]
    },
    "@rpch/rpc-server#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "PORT",
        "RESPONSE_TIMEOUT",
        "DISCOVERY_PLATFORM_API_ENDPOINT",
        "CLIENT",
        "PROVIDER",
        "RESTRICT_CORS",
        "SKIP_RPCH",
        "DISABLE_MEV_PROTECTION",
        "MEV_PROTECTION_PROVIDER",
        "MEV_KICKBACK_ADDRESS",
        "FORCE_ZERO_HOP",
        "FORCE_MANUAL_RELAYING",
        "SEGMENT_LIMIT",
        "FAILED_REQUESTS_FILE",
        "LOG_LEVEL"
      ]
    },
    "@rpch/availability-monitor#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "DATABASE_URL"
      ]
    },
    "@rpch-examples/ethers#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "format": {
      "outputs": []
    },
    "format:ci": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:ci": {
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "outputs": [
        "coverage/**"
      ]
    },
    "@rpch/e2e#start": {
      "cache": false
    }
  }
}
