{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        ".next/**"
      ]
    },
    "@rpch/exit-node#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "RPCH_PASSWORD",
        "RPCH_IDENTITY_FILE",
        "RPCH_PRIVATE_KEY",
        "RPCH_DATA_DIR",
        "HOPRD_API_TOKEN",
        "HOPRD_API_ENDPOINT",
        "DISCOVERY_PLATFORM_API_ENDPOINT",
        "DISCOVERY_PLATFORM_ACCESS_TOKEN",
        "RESPONSE_TIMEOUT",
        "OPT_IN_METRICS"
      ]
    },
    "@rpch/e2e#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "ENTRY_NODE_API_ENDPOINT",
        "ENTRY_NODE_API_TOKEN",
        "ENTRY_NODE_PEER_ID",
        "EXIT_NODE_PEER_ID",
        "EXIT_NODE_PUB_KEY"
      ]
    },
    "@rpch/funding-service#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "SECRET_KEY",
        "WALLET_PRIV_KEY",
        "PORT",
        "DB_CONNECTION_URL",
        "CONFIRMATIONS",
        "MAX_AMOUNT_OF_TOKENS",
        "TIMEOUT",
        "FORCE_CHAIN_ID",
        "FORCE_RPC_URL",
        "FORCE_SMART_CONTRACT_ADDRESS"
      ]
    },
    "@rpch/discovery-platform#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "ADMIN_SECRET",
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "PORT",
        "SESSION_SECRET",
        "URL"
      ]
    },
    "@rpch/rpc-server#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "PORT",
        "RESPONSE_TIMEOUT",
        "DISCOVERY_PLATFORM_API_ENDPOINT",
        "CLIENT",
        "PROVIDER",
        "RESTRICT_CORS",
        "SKIP_RPCH",
        "DISABLE_MEV_PROTECTION",
        "MEV_PROTECTION_PROVIDER"
      ]
    },
    "@rpch/availability-monitor#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "PORT",
        "DATABASE_URL"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "outputs": [
        "coverage/**"
      ]
    },
    "@rpch/e2e#start": {
      "cache": false
    }
  }
}
