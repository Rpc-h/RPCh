{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        ".next/**"
      ]
    },
    "rpch-crypto#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "index.js",
        "index.d.ts",
        "nodejs/**",
        "web/**"
      ]
    },
    "rpch-exit-node#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "PRIVATE_KEY",
        "HOPRD_API_TOKEN",
        "HOPRD_API_ENDPOINT",
        "RESPONSE_TIMEOUT"
      ]
    },
    "rpch-funding-platform#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ],
      "env": [
        "SECRET_KEY",
        "WALLET_PRIV_KEY",
        "PORT",
        "CONFIRMATIONS",
        "MAX_AMOUNT_OF_TOKENS",
        "TIMEOUT"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "dependsOn": [
        "format"
      ],
      "outputs": []
    },
    "test": {
      "outputs": [
        "coverage/**"
      ]
    }
  }
}